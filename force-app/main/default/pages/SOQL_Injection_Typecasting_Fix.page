<apex:page controller="SOQL_Injection_Typecasting_Fix" sidebar="false" tabstyle="SOQL_Injection_Typecasting_Fix__tab">
<apex:sectionHeader title="SOQL Injection Typecasting Fix" />
<apex:form >
    <apex:pageBlock >
        <c:Classic_Error />
        <apex:pageMessages />      
        <apex:pageBlockSection title="Demo" columns="1" id="tableBlock">
            <apex:outputPanel >
            Search by Age > 
            <apex:inputtext value="{!textualAge}"/>
            <apex:commandButton value="Perform Search" action="{!whereclause_search}"/>
        </apex:outputPanel> 

            <apex:pageBlockTable value="{!whereclause_records}" var="r">
                
                <apex:column headervalue="Name">         
                    <apex:outputField value="{!r.Name}"/>
                </apex:column> 
                
                <apex:column headervalue="Title">         
                    <apex:outputField value="{!r.Title__c}"/> 
                </apex:column>               
                
                 <apex:column headervalue="Role">         
                    <apex:outputField value="{!r.Role__c}"/>
                </apex:column> 
                
                 <apex:column headervalue="Age">         
                    <apex:outputField value="{!r.Age__c}"/>
                </apex:column>                                                                                             
            </apex:pageBlockTable>
       
        </apex:pageBlockSection>
        <apex:pageBlockSection title="Code links" columns="1">
            <apex:outputPanel >
                <ul>
                    <li><c:codeLink type="Visualforce" namespace="security_thail" name="SOQL_Injection_Typecasting_Fix" description="Visualforce Page"/></li>            
                    <li><c:codeLink type="Apex" namespace="security_thail" name="SOQL_Injection_Typecasting_Fix" description="Apex Controller"/></li>
                </ul>
            </apex:outputPanel>        
        </apex:pageBlockSection>        
    </apex:pageBlock>          
</apex:form>              
</apex:page>